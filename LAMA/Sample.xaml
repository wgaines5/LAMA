<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LAMA.Core.Profile"
             x:Class="LAMA.Sample"
             Title="Sample">


    <VerticalStackLayout Padding="20">

        <!-- Fetch & Save Buttons -->
        <HorizontalStackLayout Spacing="10">
            <Button Text="Get Data"
                    Command="{Binding GetSampleDataCommand}" />
            <Button Text="Save Sample"
                    Command="{Binding SaveSampleDataCommand}" />
        </HorizontalStackLayout>

        <!-- Data Display -->
        <CollectionView ItemsSource="{Binding SampleData}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Description}" FontSize="14"/>
                            <Label Text="{Binding Created, StringFormat='Created: {0:MM/dd/yyyy HH:mm}'}"
                                   FontSize="12" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>