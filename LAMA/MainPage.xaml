<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.MainPage"
             Title="Home"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- quick question section -->
            <Frame Padding="10" BackgroundColor="#8eabb5" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Ask a Medical Question:" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="QuestionEntry"
                           Placeholder="Type your question here"
                           BackgroundColor="#01a4ff"
                           HeightRequest="40"/>
                    <Picker x:Name="CategoryPicker"
                            Title="Select Category"
                            ItemsSource="{Binding Categories}"/>
                    <Button Text="Ask"
                            BackgroundColor="#26c7b6"
                            TextColor="Black"/>
                </VerticalStackLayout>
            </Frame>

            <!-- doctors section -->
            <Label Text="Available Medical Professionals" FontSize="20" FontAttributes="Bold" Padding="5"/>

            <ScrollView Orientation="Horizontal" HeightRequest="140">
                <HorizontalStackLayout Spacing="15" Padding="10">
                    <Frame CornerRadius="15" BackgroundColor="#34485a" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="appicon.png" WidthRequest="90" HeightRequest="90"/>
                            <Label Text="Dr. Unk1" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="15" BackgroundColor="#34485a" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="appicon.png" WidthRequest="90" HeightRequest="90"/>
                            <Label Text="Dr. Unk2" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="15" BackgroundColor="#34485a" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="appicon.png" WidthRequest="90" HeightRequest="90"/>
                            <Label Text="Dr. Unk3" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- medical advice section -->
            <Label Text="Medical Advice of the Day" FontSize="20" FontAttributes="Bold"/>
            <ScrollView Orientation="Horizontal" HeightRequest="120">
                <HorizontalStackLayout Spacing="10">
                    <Frame CornerRadius="10" BackgroundColor="#30cfcb" Padding="10" WidthRequest="180">
                        <Label Text="Mental Health matters! Take 5 min in silence" FontSize="14"/>
                    </Frame>
                    <Frame CornerRadius="10" BackgroundColor="#30cfcb" Padding="10" WidthRequest="180">
                        <Label Text="Be Sure to eat healthy meals, and stay hydrated" FontSize="14"/>
                    </Frame>
                    <Frame CornerRadius="10" BackgroundColor="#30cfcb" Padding="10" WidthRequest="180">
                        <Label Text="Wash your hands regularly for 30 seconds" FontSize="14"/>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

           
            <Label Text="Medical Professional Sign Up" FontSize="20" FontAttributes="Bold"/>
            <Frame Padding="10" BackgroundColor="#004aad" CornerRadius="10">
                <VerticalStackLayout>
                    <Button 
                        Text="Join Now"
                        BackgroundColor="#3cacae"
                        TextColor="Black"
                        Clicked="OnMPSignupClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- bottom navigation-->
                <Grid BackgroundColor="White" Padding="10" HeightRequest="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="Profile" Clicked="OnProfileClicked"/>
                <Button Grid.Column="1" Text="Med Facts" Clicked="OnMedFactsClicked"/>
                <Button Grid.Column="2" Text="Category" Clicked="OnCategoryClicked"/>
                <Button Grid.Column="3" Text="Messages" Clicked="OnMessagesClicked"/>
                <Button Grid.Column="4" Text="Settings" Clicked="OnSettingsClicked"/>
            </Grid>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
