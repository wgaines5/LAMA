<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LAMA"
             x:Class="LAMA.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <local:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter"/>
            <local:AlternatingColorConverter x:Key="AlternatingColorConverter"/>
            <local:BoolToBookmarkConverter x:Key="'BoolToBookmarkConverter"/>
            <local:SenderIdToAlignmentConverter x:Key="SenderIdToAlignmentConverter"/>
            <local:SenderIdIsOtherUser x:Key="SenderIdIsOtherUser"/>
            <local:FallbackImageConverter x:Key="FallbackImageConverter"/>
            <local:SenderIdIsCurrentUserConverter x:Key="SenderIdIsCurrentUserConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
