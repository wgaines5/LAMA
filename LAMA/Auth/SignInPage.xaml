<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Auth.SignInPage"
             Title="Sign In">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Image
             WidthRequest="120"
            HeightRequest="120"
            Aspect="AspectFill"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,10"
            Source="lama_logo.png"/>

        <Entry x:Name="EmailEntry" 
               Placeholder="Email"
               Keyboard="Email" />
        <Entry x:Name="PasswordEntry" 
               Placeholder="Password" 
               IsPassword="True" />

        <Button Text="Sign In" Clicked="OnSignInClicked" />
        <Label Text="Don't have an account? Sign Up On Home Screen" TextColor="Red" FontSize="Medium" HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSignUpTapped"/>
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>