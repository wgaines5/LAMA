<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Auth.MainPage"
             Title="Home"
             BackgroundImageSource="lamabckgrd.png">

    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Quick question section -->
            <Frame Padding="10" BackgroundColor="#8eabb5" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Ask a Medical Question:" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="QuestionEntry"
                           Placeholder="Type your question here"
                           BackgroundColor="#01a4ff"
                           TextColor="Black"
                           HeightRequest="40"/>
                    <Picker x:Name="CategoryPicker"
                            Title="Select Category"
                            TextColor="Black"
                            ItemsSource="{Binding Categories}"/>
                    <Button Text="Ask"
                            BackgroundColor="#26c7b6"
                            TextColor="Black"
                            FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Med profossional section -->
            <Frame Padding="10" BackgroundColor="#01a4ff" CornerRadius="20" HasShadow="True">
                <Label Text="Available Medical Professionals" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
            </Frame>

            <ScrollView Orientation="Horizontal" HeightRequest="140">
                <HorizontalStackLayout Spacing="15" Padding="10">
                    <Frame CornerRadius="15" BackgroundColor="#34485a" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="mdamin.png" WidthRequest="90" HeightRequest="90"/>
                            <Label Text="Dr.Amin" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="15" BackgroundColor="#34485a" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="mdcal.png" WidthRequest="90" HeightRequest="90"/>
                            <Label Text="Dr.Calzado" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="15" BackgroundColor="#34485a" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="mdtaw.png" WidthRequest="90" HeightRequest="90"/>
                            <Label Text="Dr.Tawadrous" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="15" BackgroundColor="#34485a" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="mdmaro.png" WidthRequest="90" HeightRequest="90"/>
                            <Label Text="Dr.Maarouf" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="15" BackgroundColor="#34485a" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="mdmalk.png" WidthRequest="90" HeightRequest="90"/>
                            <Label Text="Dr.Malki" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                </HorizontalStackLayout>
            </ScrollView>

            <!-- Medical advice section -->
            <Frame Padding="10" BackgroundColor="#01a4ff" CornerRadius="20" HasShadow="True">
                <Label Text="Medical Advice of the Day" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
            </Frame>

            <ScrollView Orientation="Horizontal" HeightRequest="120">
                <HorizontalStackLayout Spacing="10">
                    <Frame CornerRadius="10" BackgroundColor="#30cfcb" Padding="10" WidthRequest="180">
                        <Label Text="Mental Health matters! Take 5 min in silence" FontSize="14"/>
                    </Frame>
                    <Frame CornerRadius="10" BackgroundColor="#30cfcb" Padding="10" WidthRequest="180">
                        <Label Text="Be sure to eat healthy meals and stay hydrated" FontSize="14"/>
                    </Frame>
                    <Frame CornerRadius="10" BackgroundColor="#30cfcb" Padding="10" WidthRequest="180">
                        <Label Text="Wash your hands regularly for 30 seconds" FontSize="14"/>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- medical professional sign up section -->
            <Frame Padding="10" BackgroundColor="#01a4ff" CornerRadius="20" HasShadow="True">
                <Label Text="Medical Professional Sign Up" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
            </Frame>

            <Frame Padding="10" BackgroundColor="#004aad" CornerRadius="10">
                <VerticalStackLayout>
                    <Button 
                        Text="Join Now"
                        BackgroundColor="#3cacae"
                        TextColor="Black"
                        Clicked="OnMPSignupClicked"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
