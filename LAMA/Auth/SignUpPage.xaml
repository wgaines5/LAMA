<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Auth.SignUpPage"
             Title="Sign Up">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center">
            <Image
                x:Name="ProfileUpload"
                WidthRequest="120"
                HeightRequest="120"
                Background="LightSkyBlue"
                Aspect="AspectFill"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,10"
                Source="usermock.png"
                 />
            <Button
                Text="Upload Profile Image"
                Clicked="OnImageTapped"
                BackgroundColor="#30cfcb"
                TextColor="Black"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Entry
                x:Name="_email"
              Placeholder="Email Address..."
                
              ></Entry>

            <Entry
                x:Name="_username"
                Placeholder="Username"
                ></Entry>
            <Entry
                x:Name="FirstNameE"
                Placeholder="First Name"
                ></Entry>

            <Entry
                x:Name="LastNameE"
                Placeholder="Last Name"
                ></Entry>

            <Entry
                x:Name="_password"
               Placeholder="Password"
                IsPassword="True"
            ></Entry>
            <Entry
                x:Name="NPIE"
                Placeholder="NPI"
            ></Entry>
            <Picker x:Name="StatePicker"
                    Title="Select State"
                    TitleColor="Gray"
                    ItemsSource="{Binding States}" />
            <Entry
                x:Name="LicNumber"
             Placeholder="License Number"   
             ></Entry>

            <Button
                x:Name="SignUpButton"
                Text="Sign Up" 
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="Fill"
                Clicked="OnSignUpTapped"/>

            <Label
                Text="Have An Account Already? Sign In"
                HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSignInTapped" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>