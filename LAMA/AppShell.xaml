<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LAMA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LAMA"
     xmlns:auth="clr-namespace:LAMA.Auth"
     xmlns:core="clr-namespace:LAMA.Core"
    Shell.FlyoutBehavior="Disabled"
    Title="LAMA">

   <!--Authentication Pages-->
    
    <ShellContent
        Title="LAMA"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


    <ShellContent
        Title="LAMA"
        ContentTemplate="{DataTemplate auth:SignUpPage}"
        Route="SignUpPage" />

    <!--Core Pages-->
    
    <ShellContent
     Title="LAMA"
     ContentTemplate="{DataTemplate core:ProfilePage}"
     Route="ProfilePage" />


    <ShellContent
  Title="LAMA"
  ContentTemplate="{DataTemplate core:MedFactsPage}"
  Route="MedFactsPage" />


    <ShellContent
  Title="LAMA"
  ContentTemplate="{DataTemplate core:MessagesPage}"
  Route="MessagesPage" />

    <ShellContent
  Title="LAMA"
  ContentTemplate="{DataTemplate core:CategoryPage}"
  Route="CategoryPage" />


</Shell>
