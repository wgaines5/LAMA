<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LAMA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LAMA"
     xmlns:auth="clr-namespace:LAMA.Auth"
     xmlns:core="clr-namespace:LAMA.Core"
    Title="LAMA">

   <!--Authentication Pages-->
    
    <ShellContent
        Title="LAMA"
        ContentTemplate="{DataTemplate auth:SignInPage}"
        Route="SignInPage" />


    <ShellContent
        Title="LAMA"
        ContentTemplate="{DataTemplate auth:SignUpPage}"
        Route="SignUpPage" />

    <!--Core (Tab) Pages-->

    <ShellContent
        Title="Ask a Medical Professional"
        ContentTemplate="{DataTemplate core:MessagesPage}"
        Route="MessagesPage"/>
    
    <TabBar>

        <Tab Title="Profile">
            <ShellContent 
                ContentTemplate="{DataTemplate core:ProfilePage}" 
                          Route="ProfilePage"/>
        </Tab>

        <Tab Title="Med Facts">
            <ShellContent ContentTemplate="{DataTemplate core:MedFactsPage}"
                          Route="MedFactsPage"/>
        </Tab>

            <ShellContent
 Title="Facts"
 ContentTemplate="{DataTemplate core:MedFactsPage}"
 Route="MedFactsPage" />

       


        <ShellSection Title="Messages">
            <ShellContent
Title="Messages"
ContentTemplate="{DataTemplate core:MessagesPage}"
Route="MessagesPage" />

        </ShellSection>


        <ShellSection Title="Categories" >
            <ShellContent
Title="Categories"
ContentTemplate="{DataTemplate core:CategoryPage}"
Route="CategoryPage" />

        </ShellSection>


        <ShellSection Title="Settings" >

            <ShellContent Title="Categories">
                <ShellContent ContentTemplate="{DataTemplate core:CategoryPage}" 
                          Route="CategoryPage"/>
            </ShellContent>
        </ShellSection>

        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate core:SettingsPage}"
                          Route="SettingsPage"/>
        </Tab>
    </TabBar>
    

</Shell>
