<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LAMA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LAMA"
     xmlns:auth="clr-namespace:LAMA.Auth"
     xmlns:core="clr-namespace:LAMA.Core"
      xmlns:messages="clr-namespace:LAMA.Core.Messages"
    Title="LAMA">

    <!--Authentication Pages-->


    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate auth:MainPage}"
    Route="MainPage"

    />


    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate auth:SignUpPage}"
        Route="SignUpPage" 
        FlyoutItemIsVisible="False"
        />
   

    <ShellContent
        Title="Ask a Medical Professional"
        ContentTemplate="{DataTemplate core:MessagesPage}"
        Route="MessagesPage"/>
    
  

        <ShellSection Title="Profile">

            <ShellContent
Title="Profile"
ContentTemplate="{DataTemplate core:ProfilePage}"
Route="ProfilePage" />
        </ShellSection>

        <ShellSection Title="Facts">

            <ShellContent
 Title="Facts"
 ContentTemplate="{DataTemplate core:MedFactsPage}"
 Route="MedFactsPage" />

        </ShellSection>


        <ShellSection Title="Messages">
            <ShellContent
Title="Messages"
ContentTemplate="{DataTemplate messages:InboxPage}"
Route="InboxPage" />

        </ShellSection>


        <ShellSection Title="Categories" >
            <ShellContent
Title="Categories"
ContentTemplate="{DataTemplate core:CategoryPage}"
Route="CategoryPage" />

        </ShellSection>


        <ShellSection Title="Settings" >

            <ShellContent
Title="Settings"
ContentTemplate="{DataTemplate core:SettingsPage}"
Route="SettingsPage" />
        </ShellSection>
 
  

</Shell>
