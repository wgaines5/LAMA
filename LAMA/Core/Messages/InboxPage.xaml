<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Core.Messages.InboxPage"
             Title="Inbox">

    <Grid>
        <Image Source="medfactsbkg.png" Aspect="AspectFill"
               VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
               Opacity="0.2"/>

        <ScrollView VerticalScrollBarVisibility="Never">
            <CollectionView x:Name="MessageList"
                            ItemsSource="{Binding Messages}"
                            VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" 
                               Margin="5"
                               BackgroundColor="{Binding IsUserMessage, Converter={StaticResource BoolToColorConverter}}"
                               HorizontalOptions="{Binding IsUserMessage, Converter={StaticResource BoolToAlignmentConverter}}"
                               CornerRadius="10"
                               HasShadow="True"
                               IsVisible="{Binding IsUserMessage, Converter={StaticResource InvertBoolConverter}}">
                            <Label Text="{Binding Content}"
                                   TextColor="Black"
                                   FontSize="18" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>