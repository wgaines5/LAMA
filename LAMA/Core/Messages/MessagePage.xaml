<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Core.Messages.MessagePage"
             Title="Ask a Medical Professional">
    <ScrollView VerticalOptions="FillAndExpand">
        <Grid RowDefinitions="*,Auto">
        <Image Source="medfactsbkg.png" Aspect="AspectFill"
       VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
               Opacity="0.2"/>
        <!-- Message panel -->
        
            <CollectionView x:Name="MessageList" ItemsSource="{Binding Messages}"
                            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" 
                           Margin="5"
                           BackgroundColor="{Binding SenderId, Converter={StaticResource BoolToColorConverter}}"
                           HorizontalOptions="{Binding SenderId, Converter={StaticResource BoolToAlignmentConverter}}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Label Text="{Binding Message}"
                               TextColor="Black"
                               FontSize="18" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            </CollectionView>
       

        <!-- Message entry -->
        <StackLayout Grid.Row="1" Orientation="Horizontal" Padding="10" BackgroundColor="White">
            <Entry x:Name="MessageEntry"
                   Text="{Binding NewMessage}"
                   Placeholder="Type a message..."
                   TextColor="Black"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center" 
                   ReturnType="Send"
                   Completed="OnSendMessage"/>
            <Button Text="Send"
                    Clicked="OnSendMessage"
                   />
        </StackLayout>
    </Grid>
    </ScrollView>
</ContentPage>
