<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Core.MedFactsPage"
             Title="Medical Facts">
    <Grid>
        <Image Source="medfactsbkg.png" Aspect="AspectFill"
               VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
        <ScrollView>
            <VerticalStackLayout>
                
                <CollectionView ItemsSource="{Binding medFacts}"
                    SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="SteelBlue" 
                                   CornerRadius="10"
                                   Padding="10" Margin="5" HasShadow="True">
                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <Label Text="{Binding Text}" FontSize="18"
                                           HorizontalTextAlignment="Center"
                                           HorizontalOptions="FillAndExpand"/>
                                    <CheckBox IsChecked="{Binding IsBookmarked}"
                                              Color="Green"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
    
</ContentPage>