<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Core.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout Padding=" 20" Spacing="10">
        
        <!-- Profile Button -->
        <Frame BackgroundColor="#3cacae"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="true">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="profile_icon.png"
                           WidthRequest="30"
                           HeightRequest="30"
                           Margin="10"/>
                <StackLayout Grid.Column="1">
                    <Label Text="User Profile" 
                               FontSize="18" 
                               TextColor="White"/>
                    <Label Text="View and edit your profile" 
                               FontSize="14" 
                               TextColor="White"/>
                </StackLayout>
                <Image Source="arrow_icon.png" 
                           WidthRequest="25"
                           HeightRequest="25"
                           Margin="10"
                           Grid.Column="2"/>
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnUserProfileClicked"/>
            </Frame.GestureRecognizers>
        </Frame>
        
        <!-- Preferred Doctors Button -->
        <Frame BackgroundColor="#3cacae"
            CornerRadius="10"
            Padding="15"
            HasShadow="true">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="doctor_icon.png"
                    WidthRequest="30"
                    HeightRequest="30"
                    Margin="10"/>
                <StackLayout Grid.Column="1">
                    <Label Text="Edit Preferred Doctors" 
                        FontSize="18" 
                        TextColor="White"/>
                    <Label Text="Manage your preferred doctors" 
                        FontSize="14" 
                        TextColor="White"/>
                </StackLayout>
                <Image Source="arrow_icon.png" 
                    WidthRequest="25"
                    HeightRequest="25"
                    Margin="10"
                    Grid.Column="2"/>
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnEditPreferredDoctorsClicked"/>
            </Frame.GestureRecognizers>
        </Frame>


        <!-- Accessibility Button -->
        <Frame BackgroundColor="#3cacae"
           CornerRadius="10"
           Padding="15"
           HasShadow="true">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="doctor_icon.png"
                   WidthRequest="30"
                   HeightRequest="30"
                   Margin="10"/>
                <StackLayout Grid.Column="1">
                    <Label Text="Accessibility" 
                       FontSize="18" 
                       TextColor="White"/>
                    <Label Text="Adjust accessibility settings" 
                       FontSize="14" 
                       TextColor="White"/>
                </StackLayout>
                <Image Source="arrow_icon.png" 
                   WidthRequest="25"
                   HeightRequest="25"
                   Margin="10"
                   Grid.Column="2"/>
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnAccessibilityClicked"/>
            </Frame.GestureRecognizers>
            
        </Frame>

        <!-- Support Button -->
        <Frame BackgroundColor="#3cacae"
           CornerRadius="10"
           Padding="15"
           HasShadow="true">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="doctor_icon.png"
                   WidthRequest="30"
                   HeightRequest="30"
                   Margin="10"/>
                <StackLayout Grid.Column="1">
                    <Label Text="Support" 
                       FontSize="18" 
                       TextColor="White"/>
                    <Label Text="Get help and support" 
                       FontSize="14" 
                       TextColor="White"/>
                </StackLayout>
                <Image Source="arrow_icon.png" 
                   WidthRequest="25"
                   HeightRequest="25"
                   Margin="10"
                   Grid.Column="2"/>
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSupportClicked"/>
            </Frame.GestureRecognizers>
            
        </Frame>

        <!-- TOS Button -->
        <Frame BackgroundColor="#3cacae"
           CornerRadius="10"
           Padding="15"
           HasShadow="true">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="doctor_icon.png"
                   WidthRequest="30"
                   HeightRequest="30"
                   Margin="10"/>
                <StackLayout Grid.Column="1">
                    <Label Text="TOS" 
                       FontSize="18" 
                       TextColor="White"/>
                    <Label Text="Terms of Service" 
                       FontSize="14" 
                       TextColor="White"/>
                </StackLayout>
                <Image Source="arrow_icon.png" 
                   WidthRequest="25"
                   HeightRequest="25"
                   Margin="10"
                   Grid.Column="2"/>
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTOSClicked"/>
            </Frame.GestureRecognizers>
            
        </Frame>

        <!-- Change Accounts Button -->
        <Frame BackgroundColor="#3cacae"
           CornerRadius="10"
           Padding="15"
           HasShadow="true">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="doctor_icon.png"
                   WidthRequest="30"
                   HeightRequest="30"
                   Margin="10"/>
                <StackLayout Grid.Column="1">
                    <Label Text="Change Accounts" 
                       FontSize="18" 
                       TextColor="White"/>
                    <Label Text="Switch to another profile" 
                       FontSize="14" 
                       TextColor="White"/>
                </StackLayout>
                <Image Source="arrow_icon.png" 
                   WidthRequest="25"
                   HeightRequest="25"
                   Margin="10"
                   Grid.Column="2"/>
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnChangeAccountsClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Logout Button -->
        <Frame BackgroundColor="#3cacae"
           CornerRadius="10"
           Padding="15"
           HasShadow="true">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="doctor_icon.png"
                   WidthRequest="30"
                   HeightRequest="30"
                   Margin="10"/>
                <StackLayout Grid.Column="1">
                    <Label Text="Logout" 
                       FontSize="18" 
                       TextColor="White"/>
                    <Label Text="Sign out from your account" 
                       FontSize="14" 
                       TextColor="White"/>
                </StackLayout>
                <Image Source="arrow_icon.png"
                   WidthRequest="25"
                   HeightRequest="25"
                   Margin="10"
                   Grid.Column="2"/>
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLogoutClicked"/>
            </Frame.GestureRecognizers>
        </Frame>
    </VerticalStackLayout>
</ContentPage>