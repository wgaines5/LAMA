<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Core.Categories.SexualRPage"
             Title="Sexual and Reproductive Health"
             BackgroundImageSource="sexualbck.png">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Your Health, Your Comfort. No Judgment, Just Support. Ask Anything."
                   FontSize="20" TextColor="Black" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text=" Menstrual Health - Understanding the menstrual cycle, hygiene practices, and common issues like PMS and PCOS."
                   FontSize="15" TextColor="Black" FontAttributes="Bold"/>
            <Label Text="Sexually Transmitted Infections (STIs) - What they are, how they spread, symptoms, prevention, and treatment."
                   FontSize="15" TextColor="Black" FontAttributes="Bold"/>
            <Label Text="Sexual Consent and Rights - Understanding boundaries, consent laws, and human rights related to sexuality and reproduction."
                   FontSize="15" TextColor="Black" FontAttributes="Bold"/>
            <Label Text="Sexual Orientation and Gender Identity - Awareness and respect for diversity in orientation (LGBTQ+) and identity."
                   FontSize="15" TextColor="Black" FontAttributes="Bold"/>
            <Label Text="Emergency Contraception - What it is, when to use it, and how it works (e.g., Plan B or the morning-after pill)."
                   FontSize="15" TextColor="Black" FontAttributes="Bold"/>
            <Label Text=" Puberty Education - What changes to expect during adolescence â€” physically, emotionally, and socially."
                   FontSize="15" TextColor="Black" FontAttributes="Bold"/>

            <Frame Padding="10" BackgroundColor="#0188ff" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Ask a Question:" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="QuestionEntry" Placeholder="Type your question..." BackgroundColor="White" HeightRequest="40"/>
                    <Button Text="Ask" BackgroundColor="#30cfcb" TextColor="Black" FontAttributes="Bold" Clicked="OnAskQuestion"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>