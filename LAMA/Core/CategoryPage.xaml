<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Core.CategoryPage"
             Title="Categories">
    <VerticalStackLayout Padding="10">
        <Button
            Text="Back"
            FontSize="16"
            BackgroundColor="#34485a"
            HorizontalOptions="Start"
            Clicked="OnBackButtonClicked"/>

        <Label
            Text="Categories"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,10,0,20"/>
          
        <!--categories-->
        <CollectionView ItemsSource="{Binding Categories}" SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="10" HasShadow="True">
                        <VerticalStackLayout>
                            <Image Source="{Binding Icon}" HeightRequest="80" WidthRequest="80" HorizontalOptions="Center"/>
                            <Label Text="{Binding Name}" FontSize="16" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
             
        <!--bottom navigation-->
        <Grid BackgroundColor="White" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="Profile" Clicked="OnProfileClicked"/>
            <Button Grid.Column="1" Text="Med Facts" Clicked="OnMedFactsClicked"/>
            <Button Grid.Column="2" Text="Category" FontAttributes="Bold" Clicked="OnCategoryClicked"/>
            <Button Grid.Column="3" Text="Messages" Clicked="OnMessagesClicked"/>
            <Button Grid.Column="4" Text="Settings" Clicked="OnSettingsClicked"/>
        </Grid>


    </VerticalStackLayout>
</ContentPage>