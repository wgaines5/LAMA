<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Core.CategoryPage"
             Title="Categories"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Select a Category" FontSize="24" FontAttributes="Bold" />

            <CollectionView ItemsSource="{Binding Categories}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" CornerRadius="10" HasShadow="True">
                            <VerticalStackLayout>
                                <Image Source="{Binding Icon}" HeightRequest="80" WidthRequest="80" HorizontalOptions="Center"/>
                                <Label Text="{Binding Name}" FontSize="16" HorizontalTextAlignment="Center"/>
                                <Button Text="Enter"
                                        BackgroundColor="#034277"
                                        Clicked="OnCategorySelected"
                                        CommandParameter="{Binding Name}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>