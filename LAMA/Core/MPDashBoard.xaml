<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Core.MPDashBoard"
             Title="Provider Dashboard"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label x:Name="WelcomeMessage"
                   Text="Welcome, Provider!"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"/>

            <Frame Padding="10" BackgroundColor="#8eabb5" CornerRadius="10">
                <HorizontalStackLayout>
                    <Label Text="Online Status:" FontSize="18"/>
                    <Switch x:Name="OnlineToggle" Toggled="OnOnlineToggleChanged"/>
                </HorizontalStackLayout>
            </Frame>

            <Frame Padding="10" BackgroundColor="#3cacae" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Total Users Answered" FontSize="18" FontAttributes="Bold"/>
                    <Label x:Name="UsersAnsweredCount" Text="0" FontSize="24" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Pending Messages Queue" FontSize="18" FontAttributes="Bold"/>
            <CollectionView x:Name="PendingMessagesList" HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" BackgroundColor="#01a4ff" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Message}" FontSize="16"/>
                                <Button Text="Reply" Clicked="OnReplyClicked"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            
            <Label Text="Select Categories You Can Answer:" FontSize="18" FontAttributes="Bold"/>
            <CollectionView x:Name="CategoriesList" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                            <CheckBox IsChecked="{Binding IsSelected}"/>
                            <Label Text="{Binding Name}" FontSize="16"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>